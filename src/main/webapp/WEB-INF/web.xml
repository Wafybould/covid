<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>covid</display-name>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>

  <!-- Login -->
  <servlet>
    <servlet-name>login</servlet-name>
    <servlet-class>Login</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>

  <!-- Register -->
  <servlet>
    <servlet-name>register</servlet-name>
    <servlet-class>Register</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>register</servlet-name>
    <url-pattern>/register</url-pattern>
  </servlet-mapping>

  <!-- Logout -->
  <servlet>
    <servlet-name>logout</servlet-name>
    <servlet-class>Logout</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>logout</servlet-name>
    <url-pattern>/logout</url-pattern>
  </servlet-mapping>

  <!-- Get Friends List -->
  <servlet>
    <servlet-name>getfriends</servlet-name>
    <servlet-class>GetFriends</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>getfriends</servlet-name>
    <url-pattern>/getfriends</url-pattern>
  </servlet-mapping>

  <!-- Get Friends List -->
  <servlet>
    <servlet-name>getnotifs</servlet-name>
    <servlet-class>GetNotifs</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>getnotifs</servlet-name>
    <url-pattern>/getnotifs</url-pattern>
  </servlet-mapping>

  <!-- Search for User -->
  <servlet>
    <servlet-name>searchuser</servlet-name>
    <servlet-class>SearchUser</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>searchuser</servlet-name>
    <url-pattern>/searchuser</url-pattern>
  </servlet-mapping>

  <!-- Show User profile -->
  <servlet>
    <servlet-name>showuser</servlet-name>
    <servlet-class>ShowUser</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>showuser</servlet-name>
    <url-pattern>/showuser</url-pattern>
  </servlet-mapping>

  <!-- Adding a friend -->
  <servlet>
    <servlet-name>addfriend</servlet-name>
    <servlet-class>AddFriend</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>addfriend</servlet-name>
    <url-pattern>/addfriend</url-pattern>
  </servlet-mapping>

  <!-- Handling friends requests -->
  <servlet>
    <servlet-name>handlerequest</servlet-name>
    <servlet-class>HandleRequest</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>handlerequest</servlet-name>
    <url-pattern>/handlerequest</url-pattern>
  </servlet-mapping>

  <!-- Deleting a friend -->
  <servlet>
    <servlet-name>delfriend</servlet-name>
    <servlet-class>DelFriend</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>delfriend</servlet-name>
    <url-pattern>/delfriend</url-pattern>
  </servlet-mapping>

  <!-- Handling notifications -->
  <servlet>
    <servlet-name>handlenotif</servlet-name>
    <servlet-class>HandleNotif</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>handlenotif</servlet-name>
    <url-pattern>/handlenotif</url-pattern>
  </servlet-mapping>

  <!-- Getting activities -->
  <servlet>
    <servlet-name>getactivities</servlet-name>
    <servlet-class>GetActivities</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>getactivities</servlet-name>
    <url-pattern>/getactivities</url-pattern>
  </servlet-mapping>
</web-app>